[colors]
background = {{green}}
border_color = {{green}}
foreground = {{white}}
focused_background = {{green_dark}}
focused_foreground = {{white}}
unfocused_foreground = {{gray_dark}}
label_mode_background = {{gray_light}}
label_mode_foreground = {{black}}

[bar/base]
background = ${colors.background}
border-color = ${colors.border_color}
border-top-size = 0
cursor-click = pointer
cursor-scroll = ns-resize
fixed-center = true
font-0 = "{{polybar_font_zero}}"
font-1 = "{{polybar_font_one}}"
font-2 = "{{polybar_font_two}}"
foreground = ${colors.foreground}
height = {{polybar_height}}
module-margin-left = 1
module-margin-right = 1
modules-center =
modules-left = i3 title
modules-right = {{polybar_modules_right}}
monitor = ${env:MONITOR:}
padding-left = 0
padding-right = 1
radius = 0.0
scroll-down = i3wm-wsprev
scroll-up = i3wm-wsnext
tray-padding = 2
tray-position = right
width = 100%

[bar/honeydew]
font-0 = "Ubuntu Mono:weight=regular:size=18;3"
font-1 = "Noto Sans Mono CJK SC:size=16;1"
font-2 = "MaterialIcons-Regular:size=16;4"
height = 2%
inherit = bar/base
modules-right = mpd battery pavolume xbacklight date time

[bar/work]
font-0 = "Ubuntu Mono:weight=regular:size=10;2"
font-1 = "Noto Sans Mono CJK SC:size=10;1"
font-2 = "Material Icons:size=10;2"
height = 19
inherit = bar/base
modules-right = mpd battery-work pavolume xbacklight notifications date time

[module/i3]
type = internal/i3
pin-workspaces = true
strip-wsnumbers = false
index-sort = true
format = <label-state> <label-mode>
wrapping-scroll = false
enable-click = true

label-mode-padding = 1
label-mode-foreground = ${colors.label_mode_foreground}
label-mode-background = ${colors.label_mode_background}

; focused = Active workspace on focused monitor
label-focused = %index%:
label-focused-background = ${colors.focused_background}
label-focused-underline = ${colors.focused_foreground}
label-focused-padding = ${self.label-mode-padding}

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%:
label-unfocused-padding = ${self.label-mode-padding}
label-unfocused-underline = ${colors.unfocused_foreground}

; visible = Active workspace on unfocused monitor
label-visible = ${self.label-unfocused}
label-visible-background = ${colors.background}
label-visible-underline = ${colors.unfocused_foreground}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %index%:
label-urgent-background = ${colors.background}
label-urgent-padding = ${self.label-mode-padding}
label-urgent-underline = ${colors.focused_foreground}

[module/mpd]
type = internal/mpd
format-online = <icon-random> <toggle>
format-online-underline = ${colors.unfocused_foreground}
label-song =   %title% | %artist%
format-online-background = ${colors.focused_background}
format-online-padding = 1

icon-previous = 
icon-stop = 
icon-play = 
icon-pause = 
icon-next = 
icon-random = 

label-song-maxlen = 80
label-song-ellipsis = true

toggle-on-foreground = ${colors.focused_foreground}
toggle-off-foreground = ${colors.unfocused_foreground}

[module/xbacklight]
type = internal/xbacklight
format = <label>
label =  %percentage%%
format-underline = ${colors.unfocused_foreground}
label-foreground = ${colors.focused_foreground}

[module/date]
type = internal/date
interval = 3600
date = "%a, %b %d"
date-alt = " %d-%m-%Y"
label = " %date%"
format-foreground = ${colors.focused_foreground}
label-underline = ${colors.unfocused_foreground}

[module/time]
type = internal/date
interval = 60
time = "%I:%M %p"
time-alt = %H:%M
label = " %time%"
format-foreground = ${colors.focused_foreground}
label-underline = ${colors.unfocused_foreground}

[module/pavolume]
type = custom/script
tail = true
label = %output%
label-underline = ${colors.unfocused_foreground}
exec = ~/.config/polybar/pavolume.sh --listen
click-right = exec pavucontrol
click-left = ~/.config/polybar/pavolume.sh --toggle
scroll-up = ~/.config/polybar/pavolume.sh --up
scroll-down = ~/.config/polybar/pavolume.sh --down

[module/notifications]
type = custom/script
tail = true
label = %output%
label-underline = ${colors.unfocused_foreground}
exec = ~/.config/polybar/notifications.sh --listen
click-left = ~/.config/polybar/notifications.sh --toggle
click-right = ~/.config/polybar/notifications.sh --clear

[module/battery]
type = internal/battery
battery = BAT1
adapter = ADP1
full-at = 98
time-format = %H:%M

format-charging = <label-charging>
format-charging-underline = ${colors.unfocused_foreground}
label-charging = " %percentage%% (%time%)"

format-discharging = <label-discharging>
format-discharging-underline = ${self.format-charging-underline}
label-discharging = " %percentage%% (%time%)"

format-full = <label-full>
format-full-underline = ${self.format-charging-underline}
label-full = " %percentage%%"

[module/battery-work]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98
time-format = %H:%M

format-charging = <label-charging>
format-charging-underline = ${colors.unfocused_foreground}
label-charging = " %percentage%% (%time%)"

format-discharging = <label-discharging>
format-discharging-underline = ${self.format-charging-underline}
label-discharging = " %percentage%%"

format-full = <label-full>
format-full-underline = ${self.format-charging-underline}
label-full = " %percentage%%"

[module/title]
type = internal/xwindow
format = <label>
format-background = ${colors.focused_background}
format-foreground = ${colors.focused_foreground}
label = " %title%"
label-underline = ${colors.focused_foreground}
label-padding = 1
label-maxlen = 40

[settings]
screenchange-reload = true

[global/wm]

