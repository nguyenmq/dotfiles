[colors]
green = #2bb24c
dk_green = #005f00
white = #ffffff
black = #000000
grey = #d3d3d3
purple = #875faf
dk_grey = #aaaaaa

[bar/base]
monitor = ${env:MONITOR:}
background = ${colors.green}
border-color = ${colors.green}
border-bottom-size = 3
cursor-click = pointer
cursor-scroll = ns-resize
fixed-center = true
foreground = ${colors.white}
modules-center =
modules-left = i3 title
radius = 0.0
scroll-down = i3wm-wsprev
scroll-up = i3wm-wsnext
tray-padding = 2
tray-position = right
width = 100%

[bar/honeydew]
border-top-size = 0
font-0 = "Ubuntu Mono:weight=regular:size=18;3"
font-1 = "Roboto:size=16;3"
font-2 = "material\-wifi:size=16;4"
font-3 = "MaterialIcons-Regular:size=16;4"
height = 2%
inherit = bar/base
line-size = 4
module-margin-left = 1
module-margin-right = 1
modules-right = mpd battery pavolume xbacklight wlan date time
padding-left = 1
padding-right = 1

[bar/lime]
