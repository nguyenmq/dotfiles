[core]
    editor = vim
    pager = less -S
    filemode = false
    preloadIndex = true
[merge]
    tool = vimdiff
    guitool = gvimdiff
[diff]
    tool = vimdiff
    guitool = gvimdiff
[color]
    ui = true
    diff = never
[alias]
    lg1 = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
    lg = log --graph --abbrev-commit --decorate --format=format:'%C(bold red)%h%C(reset) - %C(bold blue)%an%C(reset) - %C(bold green)%aD%C(reset) %C(reset)%C(bold yellow)%d%C(reset)%n''          %C(black)%s%C(reset)%C(reset)' --all
    lb = log --graph --abbrev-commit --decorate --format=format:'%C(bold red)%h%C(reset) - %C(bold blue)%an%C(reset) - %C(bold green)%aD%C(reset) %C(reset)%C(bold yellow)%d%C(reset)%n''          %C(black)%s%C(reset)%C(reset)'
    dt = difftool
    su = submodule update --init --recursive
    log = log --color=always
    ls = status --no-short --untracked-files=normal
    rem = rebase origin/master
    cm = checkout master
[credential]
    helper = cache
[color "diff"]
    meta = blue bold
    frag = magenta bold
    old = red
    new = green
[color "status"]
    changed = green bold
    added = blue bold
    untracked = magenta
    deleted = red bold
    header = cyan
[difftool]
    prompt = false
    tool = gvimdiff
[grep]
    lineNumber = true
[fetch]
    prune = true
[pager]
    show = "vim -R -"
    diff = "vim -R -c 'set filetype=diff' -c 'normal gg' -"
[status]
    branch = true
    short = true
    showUntrackedFiles = no
    submoduleSummary = true
[include]
    path = ~/.gitconfig.local
