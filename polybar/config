[colors]
green = #22a21f
dk_green = #005f00
white = #ffffff
black = #000000
grey = #d3d3d3
purple = #875faf

[bar/base]
monitor = ${env:MONITOR:}
background = ${colors.green}
border-color = ${colors.green}
cursor-click = pointer
cursor-scroll = ns-resize
fixed-center = true
foreground = ${colors.white}
modules-center = date
modules-left = i3
radius = 0.0
scroll-down = i3wm-wsprev
scroll-up = i3wm-wsnext
tray-padding = 2
tray-position = right
width = 100%

[bar/honeydew]
border-top-size = 0
font-0 = "Ubuntu Mono:weight=bold:size=18;3"
font-1 = "DejaVu Sans Mono:size=18;3"
font-2 = "material\-wifi:size=16;4"
font-3 = "MaterialIcons-Regular:size=16;4"
height = 2%
inherit = bar/base
line-size = 4
module-margin-left = 1
module-margin-right = 2
modules-right = mpd battery volume xbacklight wlan
padding-left = 1
padding-right = 2

[bar/lime]
border-top-size = 0
font-0 = "Ubuntu Mono:weight=bold:size=11;2"
font-1 = "DejaVu Sans Mono:weight=bold:size=11;2"
font-2 = "material\-wifi:size=10;1"
font-3 = "MaterialIcons-Regular:size=10;2"
height = 20
inherit = bar/base
line-size = 2
module-margin-left = 1
module-margin-right = 2
modules-right = mpd volume wlan
padding-left = 1
padding-right = 1

[module/i3]
type = internal/i3
pin-workspaces = true
strip-wsnumbers = false
index-sort = true
format = <label-state> <label-mode>
wrapping-scroll = false
enable-click = true

label-mode-padding = 2
label-mode-foreground = ${colors.black}
label-mode-background = ${colors.white}

; focused = Active workspace on focused monitor
label-focused = %name%
label-focused-background = ${colors.dk_green}
label-focused-underline = ${colors.grey}
label-focused-padding = ${self.label-mode-padding}

; unfocused = Inactive workspace on any monitor
label-unfocused = ${self.label-focused}
label-unfocused-padding = ${self.label-mode-padding}
label-unfocused-underline = ${self.label-focused-underline}

; visible = Active workspace on unfocused monitor
label-visible = ${self.label-focused}
label-visible-background = ${colors.green}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = ${self.label-focused}
label-urgent-background = ${colors.purple}
label-urgent-padding = ${self.label-mode-padding}
label-urgent-underline = ${colors.white}

[module/mpd]
type = internal/mpd
format-online = <label-song>  <icon-random> <toggle>
format-online-underline = ${colors.grey}
label-song =   %artist% - %title%

icon-previous = 
icon-stop = 
icon-play = 
icon-pause = 
icon-next = 
icon-random = 

label-song-maxlen = 50
label-song-ellipsis = true

toggle-on-foreground = ${colors.white}
toggle-off-foreground = #aaa

[module/xbacklight]
type = internal/xbacklight
format = <label>
label =  %percentage%%
format-underline = ${colors.grey}

[module/wlan]
type = internal/network
interface = wlp4s0
interval = 3.0

format-connected = <ramp-signal> <label-connected>
format-connected-underline = ${colors.grey}
label-connected = "%essid% (%signal%%)"

format-disconnected = <label-disconnected>
format-disconnected-underline = ${self.format-connected-underline}
label-disconnected = " disconnected"
label-disconnected-foreground = ${colors.white}

; 0-3: weakess to strong signal. 4: disconnected
ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-foreground = ${colors.white}

[module/date]
type = internal/date
interval = 5
date = "%a, %b %d"
date-alt = " %d-%m-%Y"
time = "%I:%M %p   "
time-alt = %H:%M
label = "%date%  |  %time%"
format-foreground = ${colors.grey}

[module/volume]
type = internal/volume

format-volume = <label-volume>
label-volume =  %percentage%%
label-volume-foreground = ${colors.white}
format-volume-underline = ${colors.grey}

format-muted-prefix = " "
format-muted-foreground = ${colors.white}
format-muted-underline = ${colors.grey}
label-muted = mute

[module/battery]
type = internal/battery
battery = BAT1
adapter = ADP1
full-at = 98
time-format = %H:%M

format-charging = <label-charging>
format-charging-underline = ${colors.grey}
label-charging = " %percentage%% (%time%)"

format-discharging = <label-discharging>
format-discharging-underline = ${self.format-charging-underline}
label-discharging = " %percentage%% (%time%)"

format-full = <label-full>
format-full-underline = ${self.format-charging-underline}
label-full = " %percentage%%"

[settings]
screenchange-reload = true

[global/wm]
margin-top = 5
margin-bottom = 5

