[core]
    editor = vim
    pager = less -S
    filemode = false
    preloadIndex = true
[merge]
    tool = vimdiff
    guitool = gvimdiff
[diff]
    tool = vimdiff
    guitool = gvimdiff
[color]
    ui = true
[alias]
    lg1 = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
    lg = log --graph --abbrev-commit --decorate --format=format:'%C(bold red)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(black)%s%C(reset) %C(dim black)- %an%C(reset)' --all
    lb = log --graph --abbrev-commit --decorate --format=format:'%C(bold red)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(black)%s%C(reset) %C(dim black)- %an%C(reset)'
    dt = difftool -g
    su = submodule update --init
[credential]
    helper = cache
[color "diff"]
    meta = blue bold
    frag = magenta bold
    old = red
    new = green
[color "status"]
    changed = green bold
    added = blue bold
    untracked = magenta
    deleted = red bold
[difftool]
    prompt = false
    tool = gvimdiff
[grep]
    lineNumber = true
[fetch]
    prune = true
[include]
    path = ~/.gitconfig.local
